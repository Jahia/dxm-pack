<?xml version="1.0" encoding="UTF-8"?>
<shortcuts>
    <skipIfNotSupported/>
    <programGroup defaultName="${product.name} ${product.version}" location="applications"/>
    
<!-- Start/stop Tomcat -->    
    <shortcut
        name="Start Digital Experience Manager"
        target="$INSTALL_PATH/startDigitalFactory.sh"
        commandLine=""
        workingDirectory="$INSTALL_PATH/"
        description="This starts the Digital Experience Manager Server"
        initialState="normal"
        programGroup="yes"
        desktop="no"
        applications="no"
        startMenu="no"
        startup="no"
        iconFile="$INSTALL_PATH/icons/start.png"
        iconIndex="0"
        terminal="true"
        type="Application"
        encoding="UTF-8">
        <createForPack name="tomcat"/>
    </shortcut>
    <shortcut
        name="Stop Digital Experience Manager"
        target="$INSTALL_PATH/stopDigitalFactory.bat"
        commandLine=""
        workingDirectory="$INSTALL_PATH/"
        description="This stops the Digital Experience Manager Server"
        initialState="normal"
        programGroup="yes"
        desktop="no"
        applications="no"
        startMenu="no"
        iconFile="$INSTALL_PATH/icons/stop.png"
        iconIndex="0"
        terminal="true"
        startup="no"
        type="Application"
        encoding="UTF-8">
        <createForPack name="tomcat"/>
    </shortcut>

<!-- Uninstaller -->    
    <shortcut
        name="Uninstall Digital Experience Manager"
        description="This removes the Digital Experience Manager Server from your system"
        target="$JAVA_HOME/bin/java"
        commandLine="-jar $INSTALL_PATH/uninstaller/uninstaller.jar"
        initialState="noShow"
        programGroup="yes"
        desktop="no"
        applications="no"
        startMenu="no"
        iconFile="trashcan_full"
        iconIndex="0"
        type="Application"
        encoding="UTF-8">
    </shortcut>

