<?xml version="1.0" encoding="UTF-8"?>
<shortcuts>
    <skipIfNotSupported/>
    <programGroup defaultName="${product.name} ${product.version}" location="applications"/>
    
<!-- Documentation -->
    <shortcut
        name="Jahia Community Web Site"
        subgroup="\Documentation"
        description="Opens the Jahia Community Web site"
        target="$INSTALL_PATH\docs\JahiaCommunity.URL"
        iconFile="%SystemRoot%\system32\shell32.dll"
        iconIndex="13"
        programGroup="yes"
        encoding="UTF-8">
    </shortcut>
    <shortcut
        name="Jahia Company Web Site"
        subgroup="\Documentation"
        description="Opens the Jahia Company Web site"
        target="$INSTALL_PATH\docs\JahiaCorporate.URL"
        iconFile="%SystemRoot%\system32\shell32.dll"
        iconIndex="13"
        programGroup="yes"
        encoding="UTF-8">
    </shortcut>
    <shortcut
        name="Jahia Documentation"
        subgroup="\Documentation"
        description="Opens the documentation page on the Jahia Community Web site"
        target="$INSTALL_PATH\docs\JahiaDocumentation.URL"
        iconFile="%SystemRoot%\system32\shell32.dll"
        iconIndex="13"
        programGroup="yes"
        encoding="UTF-8">
    </shortcut>
    <shortcut
        name="Issue Tracking"
        subgroup="\Documentation"
        description="Opens the Issue Tracking system"
        target="$INSTALL_PATH\docs\IssueTrackingCommunity.URL"
        iconFile="%SystemRoot%\system32\shell32.dll"
        iconIndex="13"
        programGroup="yes"
        encoding="UTF-8">
    </shortcut>
    
<!-- Shortcuts -->
    <shortcut
        name="Digital Factory"
        subgroup="\Shortcuts (only when Digital Factory is running)"
        description="Open the Digital Factory welcome page (running on localhost)"
        target="$INSTALL_PATH\OpenDigitalFactory.URL"
        iconFile="$INSTALL_PATH\icons\jahia.ico"
        iconIndex="0"
        programGroup="yes"
        encoding="UTF-8">
        <createForPack name="tomcat"/>
    </shortcut>
    <shortcut
        name="Digital Factory Administration"
        subgroup="\Shortcuts (only when Digital Factory is running)"
        description="Open the Digital Factory Administration page (running on localhost)"
        target="$INSTALL_PATH\OpenDigitalFactoryAdministration.URL"
        iconFile="$INSTALL_PATH\icons\jahia.ico"
        iconIndex="0"
        programGroup="yes"
        encoding="UTF-8">
        <createForPack name="tomcat"/>
    </shortcut>

<!-- Start/stop Tomcat -->    
    <shortcut
        name="Start Digital Factory"
        target="$INSTALL_PATH\startDigitalFactory.bat"
        commandLine=""
        workingDirectory="$INSTALL_PATH\"
        description="This starts the Digital Factory Server"
        initialState="normal"
        programGroup="yes"
        desktop="no"
        applications="no"
        startMenu="no"
        startup="no"
        iconFile="$INSTALL_PATH\icons\start.ico"
        iconIndex="0"
        encoding="UTF-8">
        <createForPack name="tomcat"/>
    </shortcut>
    <shortcut
        name="Stop Digital Factory"
        target="$INSTALL_PATH\stopDigitalFactory.bat"
        commandLine=""
        workingDirectory="$INSTALL_PATH\"
        description="This stops the Digital Factory Server"
        initialState="normal"
        programGroup="yes"
        desktop="no"
        applications="no"
        startMenu="no"
        iconFile="$INSTALL_PATH\icons\stop.ico"
        iconIndex="0"
        startup="no"
        encoding="UTF-8">
        <createForPack name="tomcat"/>
    </shortcut>

<!-- Uninstaller -->    
    <shortcut
        name="Uninstall Digital Factory"
        description="This removes the Digital Factory Server from your system"
        target="$JAVA_HOME\bin\java.exe"
        commandLine="-jar $INSTALL_PATH\uninstaller\uninstaller.jar"
        initialState="noShow"
        programGroup="yes"
        desktop="no"
        applications="no"
        startMenu="no"
        iconFile="%SystemRoot%\system32\shell32.dll"
        iconIndex="31"
        type="Application"
        encoding="UTF-8">
    </shortcut>
    
</shortcuts>
