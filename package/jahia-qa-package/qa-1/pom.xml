<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                      http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>org.jahia.server</groupId>
        <artifactId>jahia-qa-package</artifactId>
        <version>6.5-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>jahia-qa1</artifactId>
    <name>Jahia QA-1 Package</name>
    <packaging>pom</packaging>
    <dependencies>
        <dependency>
            <groupId>org.jahia.server</groupId>
            <artifactId>jahia-war</artifactId>
            <version>6.5-SNAPSHOT</version>
            <classifier>${jahia.war.classifier}</classifier>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>org.jahia.server</groupId>
            <artifactId>shared-libraries</artifactId>
            <version>6.5-SNAPSHOT</version>
            <type>pom</type>
        </dependency>
    </dependencies>

            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>copy</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>lambdaprobe</groupId>
                                            <artifactId>lambdaprobe</artifactId>
                                            <version>jahia-version</version>
                                            <type>war</type>
                                            <overWrite>true</overWrite>
                                            <outputDirectory>${project.build.directory}/apache-tomcat-${jahia.tomcat.version}/webapps</outputDirectory>
                                            <destFileName>probe.war</destFileName>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.jahia.server</groupId>
                                            <artifactId>pluto-testsuite</artifactId>
                                            <version>2.0.0</version>
                                            <type>war</type>
                                            <overWrite>true</overWrite>
                                            <outputDirectory>${project.build.directory}/apache-tomcat-${jahia.tomcat.version}/webapps</outputDirectory>
                                            <destFileName>testsuite-jahia.war</destFileName>
                                        </artifactItem>

                                    </artifactItems>
                                    <outputDirectory>${project.build.directory}/apache-tomcat-${jahia.tomcat.version}/webapps</outputDirectory>
                                    <overWriteReleases>true</overWriteReleases>
                                    <overWriteSnapshots>true</overWriteSnapshots>
                                </configuration>
                            </execution>
                            <execution>
                                <id>unpack</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>unpack</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>org.apache.tomcat</groupId>
                                            <artifactId>apache-tomcat</artifactId>
                                            <version>${jahia.tomcat.version}</version>
                                            <type>zip</type>
                                            <overWrite>false</overWrite>
                                            <outputDirectory>${project.build.directory}</outputDirectory>
                                            <excludes>**/webapps/examples/**,**/webapps/docs/**,**/webapps/ROOT/**</excludes>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>org.jahia.server</groupId>
                        <artifactId>maven-jahia-plugin</artifactId>
                        <version>${jahia.plugin.version}</version>
                        <configuration>
                            <targetServerType>tomcat</targetServerType>
                            <targetServerVersion>6</targetServerVersion>
                            <targetServerDirectory>${project.build.directory}/apache-tomcat-${jahia.tomcat.version}</targetServerDirectory>
                            <targetConfigurationDirectory>${project.build.directory}/apache-tomcat-${jahia.tomcat.version}</targetConfigurationDirectory>
                            <siteImportLocation>
                                <param>/home/bamboo/bin/siteImport_testSite.zip</param>
                                <param>/home/bamboo/bin/siteImport_DemoSite.zip</param>
                            </siteImportLocation>
                            <cluster_activated>false</cluster_activated>
                            <processingServer>false</processingServer>
                            <databaseUrl>jdbc:mysql://10.8.37.246/qa_241?useUnicode=true&amp;characterEncoding=UTF-8&amp;useServerPrepStmts=false</databaseUrl>
                            <databaseUsername>jahia</databaseUsername>
                            <databasePassword>jahia</databasePassword>
                            <overwritedb>true</overwritedb>
                            <storeFilesInDB>true</storeFilesInDB>
                            <localIp>10.8.37.241</localIp>
                            <externalConfigPath>${basedir}/src/main/resources/external-config</externalConfigPath>
                        </configuration>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>deploy</goal>
                                    <goal>configure</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <configuration>
                            <descriptors>
                                <descriptor>src/main/assembly/src.xml</descriptor>
                            </descriptors>
                        </configuration>

                        <executions>
                            <execution>
                                <id>make-assembly</id>
                                <phase>install</phase>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>${antrun.plugin.version}</version>
                        <dependencies>
                            <dependency>
                                <groupId>org.apache.ant</groupId>
                                <artifactId>ant-jsch</artifactId>
                                <version>${ant.version}</version>
                            </dependency>
                            <dependency>
                                <groupId>com.jcraft</groupId>
                                <artifactId>jsch</artifactId>
                                <version>0.1.38</version>
                            </dependency>
                        </dependencies>

                        <executions>
                            <execution>
                                <id>packaging</id>
                                <phase>package</phase>
                                <configuration>
                                    <tasks>
                                        <copy file="./src/main/resources/catalina.sh" tofile="${project.build.directory}/apache-tomcat-${jahia.tomcat.version}/bin/catalina.sh" overwrite="true"/>
                                        <copy file="./src/main/resources/conf/server.xml" tofile="${project.build.directory}/apache-tomcat-${jahia.tomcat.version}/conf/server.xml" overwrite="true"/>
                                        <copy file="./src/main/resources/conf/web.xml" tofile="${project.build.directory}/apache-tomcat-${jahia.tomcat.version}/conf/web.xml" overwrite="true"/>
                                    </tasks>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>deploying</id>
                                <phase>install</phase>
                                <configuration>
                                    <tasks>
                                        <property name="distant.hosts.ip" value="10.8.37.241"/>
                                        <property name="distant.hosts.username" value="jahia"/>
                                        <property name="distant.hosts.password" value="jahia123"/>
                                        <sshexec host="${distant.hosts.ip}" username="${distant.hosts.username}" password="${distant.hosts.password}"
                                                 command="export JAVA_HOME=/usr/java/latest;/home/jahia/install/jahia/bin/catalina.sh stop -force"
                                                 trust="true" failonerror="false"/>
                                        <sleep seconds="5"/>
                                        <sshexec host="${distant.hosts.ip}" username="${distant.hosts.username}" password="${distant.hosts.password}"
                                                 command="rm -Rf /home/jahia/install/jahia" trust="true"
                                                 failonerror="false"/>
                                        <scp file="${project.build.directory}/${project.build.finalName}-jahia.tar.gz"
                                             todir="${distant.hosts.username}@${distant.hosts.ip}:/home/jahia/install" password="${distant.hosts.password}"
                                             trust="true"/>
                                        <sshexec host="${distant.hosts.ip}" username="${distant.hosts.username}" password="${distant.hosts.password}"
                                                 command="tar xfz /home/jahia/install/${project.build.finalName}-jahia.tar.gz --directory /home/jahia/install"
                                                 trust="true" failonerror="false"/>
                                        <sshexec host="${distant.hosts.ip}" username="${distant.hosts.username}" password="${distant.hosts.password}"
                                                 command="rm /home/jahia/install/${project.build.finalName}-jahia.tar.gz "
                                                 trust="true" failonerror="false"/>
                                        <sshexec host="${distant.hosts.ip}" username="${distant.hosts.username}" password="${distant.hosts.password}"
                                                 command="chmod 755 /home/jahia/install/jahia/bin/*.sh" trust="true"
                                                 failonerror="false"/>
                                        <sshexec host="${distant.hosts.ip}" username="${distant.hosts.username}" password="${distant.hosts.password}"
                                                 command="export JAVA_HOME=/usr/java/latest;/home/jahia/install/jahia/bin/catalina.sh start"
                                                 trust="true" failonerror="false"/>
                                    </tasks>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
</project>
