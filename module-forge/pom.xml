    <modelVersion>4.0.0</modelVersion>
    <artifactId>jahia-module-forge</artifactId>
    <name>Jahia Module Forge Project</name>
    <groupId>org.jahia.server</groupId>
    <version>6.5-SNAPSHOT</version>
