                            </execution>
                            <execution>
                                <id>update-JahiApp-Wiki</id>
                                <phase>generate-sources</phase>
                                <goals>
                                    <goal>update</goal>
                                </goals>
                                <configuration>
                                    <workingDirectory>JahiApp-Wiki</workingDirectory>
                                    <connectionUrl>scm:git:git@github.com:Jahia/JahiApp-Wiki</connectionUrl>
                                </configuration>
                            </execution>
                            <execution>
                                <id>update-LDAP-provider</id>
                                <phase>generate-sources</phase>
                                <goals>
                                    <goal>update</goal>
                                </goals>
                                <configuration>
                                    <workingDirectory>LDAP-provider</workingDirectory>
                                    <connectionUrl>scm:git:git@github.com:Jahia/LDAP-provider</connectionUrl>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
           <id>all</id>
            <modules>
                <module>modules-set</module>
                <module>templates-set</module>
                <module>JahiApp-Blog</module>
                <module>JahiApp-Forum</module>
                <module>JahiApp-MyConnections</module>
                <module>JahiApp-MyPortal</module>
                <module>JahiApp-Newsletter</module>
                <module>JahiApp-Wiki</module>
                <module>LDAP-provider</module>
            </modules>
        </profile>
	 </profiles>
</project>
