        <url>http://www.jahia.org</url>
    </organization>
    <!--logo>/images/jahia.gif</logo-->
    <description>Jahia CE Full Package</description>
    <url>http://www.jahia.org</url>

    <repositories>
        <repository>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <id>jahiaRepository</id>
            <name>Jahia's Maven Repository</name>
            <url>http://maven.jahia.org/maven2</url>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <id>jahiaRepository</id>
            <name>Jahia's Maven Repository</name>
            <url>http://maven.jahia.org/maven2</url>
        </pluginRepository>
        <pluginRepository>
            <id>Codehaus</id>
            <url>http://repository.codehaus.org/</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <releases>
                <enabled>false</enabled>
            </releases>
        </pluginRepository>
    </pluginRepositories>

    <profiles>
        <profile>
            <id>checkout</id>

            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-scm-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>checkout-modules-set</id>
                                <phase>generate-sources</phase>
                                <goals>
                                    <goal>checkout</goal>
                                </goals>
                                <configuration>
                                    <checkoutDirectory>modules-set</checkoutDirectory>
                                    <connectionUrl>scm:git:git@github.com:Jahia/modules-set</connectionUrl>
                                    <skipCheckoutIfExists>true</skipCheckoutIfExists>
                                </configuration>
                            </execution>
                            <execution>
                                <id>checkout-templates-set</id>
                                <phase>generate-sources</phase>
                                <goals>
                                    <goal>checkout</goal>
                                </goals>
                                <configuration>
                                    <checkoutDirectory>templates-set</checkoutDirectory>
                                    <connectionUrl>scm:git:git@github.com:Jahia/templates-set</connectionUrl>
                                    <skipCheckoutIfExists>true</skipCheckoutIfExists>
                                </configuration>
                            </execution>
                            <execution>
                                <id>checkout-JahiApp-Blog</id>
                                <phase>generate-sources</phase>
                                <goals>
                                    <goal>checkout</goal>
                                </goals>
                                <configuration>
                                    <checkoutDirectory>JahiApp-Blog</checkoutDirectory>
                                    <connectionUrl>scm:git:git@github.com:Jahia/JahiApp-Blog</connectionUrl>
                                    <skipCheckoutIfExists>true</skipCheckoutIfExists>
                                </configuration>
                            </execution>
                            <execution>
                                <id>checkout-JahiApp-Forum</id>
                                <phase>generate-sources</phase>
                                <goals>
                                    <goal>checkout</goal>
                                </goals>
                                <configuration>
                                    <checkoutDirectory>JahiApp-Forum</checkoutDirectory>
                                    <connectionUrl>scm:git:git@github.com:Jahia/JahiApp-Forum</connectionUrl>
                                    <skipCheckoutIfExists>true</skipCheckoutIfExists>
                                </configuration>
                            </execution>
							<execution>
                                <id>checkout-JahiApp-MyConnections</id>
                                <phase>generate-sources</phase>
                                <goals>
                                    <goal>checkout</goal>
                                </goals>
                                <configuration>
                                    <checkoutDirectory>JahiApp-MyConnections</checkoutDirectory>
                                    <connectionUrl>scm:git:git@github.com:Jahia/JahiApp-MyConnections</connectionUrl>
                                    <skipCheckoutIfExists>true</skipCheckoutIfExists>
                                </configuration>
                            </execution>
                            <execution>
                                <id>checkout-JahiApp-MyPortal</id>
                                <phase>generate-sources</phase>
                                <goals>
                                    <goal>checkout</goal>
                                </goals>
                                <configuration>
                                    <checkoutDirectory>JahiApp-MyPortal</checkoutDirectory>
                                    <connectionUrl>scm:git:git@github.com:Jahia/JahiApp-MyPortal</connectionUrl>
                                    <skipCheckoutIfExists>true</skipCheckoutIfExists>
                                </configuration>
                            </execution>
                            <execution>
                                <id>checkout-JahiApp-Newsletter</id>
                                <phase>generate-sources</phase>
                                <goals>
                                    <goal>checkout</goal>
                                </goals>
                                <configuration>
                                    <checkoutDirectory>JahiApp-Newsletter</checkoutDirectory>
                                    <connectionUrl>scm:git:git@github.com:Jahia/JahiApp-Newsletter</connectionUrl>
                                    <skipCheckoutIfExists>true</skipCheckoutIfExists>
                                </configuration>
                            </execution>
                            <execution>
                                <id>checkout-JahiApp-Wiki</id>
                                <phase>generate-sources</phase>
                                <goals>
                                    <goal>checkout</goal>
                                </goals>
                                <configuration>
                                    <checkoutDirectory>JahiApp-Wiki</checkoutDirectory>
                                    <connectionUrl>scm:git:git@github.com:Jahia/JahiApp-Wiki</connectionUrl>
                                    <skipCheckoutIfExists>true</skipCheckoutIfExists>
                                </configuration>
                            </execution>
                            <execution>
                                <id>LDAP-provider</id>
                                <phase>generate-sources</phase>
                                <goals>
                                    <goal>checkout</goal>
                                </goals>
                                <configuration>
                                    <checkoutDirectory>LDAP-provider</checkoutDirectory>
                                    <connectionUrl>scm:git:git@github.com:Jahia/LDAP-provider</connectionUrl>
                                    <skipCheckoutIfExists>true</skipCheckoutIfExists>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
           <id>update</id>
           <build>
