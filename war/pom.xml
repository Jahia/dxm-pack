        <profile>
            <id>jmeterTest</id>
            <activation>
                <property>
                    <name>jahia.test.jmeter.path</name>
                </property>
            </activation>
            <build>
                <resources>
                    <resource>
                        <directory>src/main/resources</directory>
                    </resource>
                    <resource>
                        <directory>target/jasper</directory>
                    </resource>
                </resources>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>${antrun.plugin.version}</version>
                        <dependencies>
                            <dependency>
                                <groupId>org.apache.ant</groupId>
                                <artifactId>ant-jsch</artifactId>
                                <version>${ant.version}</version>
                            </dependency>
                            <dependency>
                                <groupId>com.jcraft</groupId>
                                <artifactId>jsch</artifactId>
                                <version>0.1.41</version>
                            </dependency>
                        </dependencies>
                        <executions>
                            <execution>
                                <id>start-jmeter-test</id>
                                <phase>integration-test</phase>
                                <configuration>
                                    <tasks>
                                        <echo message="Deploy ACME Demo Web Site" />
                                        <copy file="${jahia.deploy.targetServerDirectory}/webapps/${jahia.deploy.war.dirName}/WEB-INF/var/prepackagedSites/webtemplates65.zip" toDir="${jahia.deploy.targetServerDirectory}/webapps/${jahia.deploy.war.dirName}/WEB-INF/var/imports" />
                                        <sleep seconds="90" />
                                        <echo message="Get the sitemap" />
                                        <get src="${jahia.test.url}/cms/render/default/en/sites/ACME/home.sitemap.txt" verbose="on" dest="${project.build.directory}/rawpageurls.txt" ignoreerrors="true" username="${jahia.test.jmeter.username}" password="${jahia.test.jmeter.password}" />
                                        <available file="${project.build.directory}/rawpageurls.txt" property="sitemap.present" />
                                        <exec executable="sort" dir="${project.build.directory}" output="${project.build.directory}/sortpageurls.txt" input="${project.build.directory}/rawpageurls.txt" />
                                        <exec executable="uniq" dir="${project.build.directory}" output="${project.build.directory}/uniqpageurls.txt" input="${project.build.directory}/sortpageurls.txt" />
                                        <exec executable="grep" dir="${project.build.directory}" output="${project.build.directory}/pageurls.txt" input="${project.build.directory}/uniqpageurls.txt">
                                            <arg line="-v '^$'" />
                                        </exec>
                                        <copy toDir="${jahia.test.jmeter.path}/bin/testPlan">
                                            <fileset dir="${pom.basedir}/src/main/scripts/jmeter/" />
                                        </copy>
                                        <copy file="${project.build.directory}/pageurls.txt" toDir="${jahia.test.jmeter.path}/bin/testPlan" />
                                    </tasks>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                            <execution>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <phase>post-integration-test</phase>
                                <configuration>
                                    <tasks>
                                        <copy toDir="${pom.basedir}/target/jmeterResults/">
                                            <fileset dir="${jahia.test.jmeter.path}/bin/results" erroronmissingdir="false" />
                                        </copy>
                                        <copy toDir="${pom.basedir}/target/jmeterResults/">
                                            <fileset dir="${pom.basedir}/../results" erroronmissingdir="false" />
                                        </copy>
                                        <copy toDir="${pom.basedir}/target/jmeterResults/">
                                            <fileset dir="${pom.basedir}/results" erroronmissingdir="false" />
                                        </copy>
                                    </tasks>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>jasperreports-maven-plugin</artifactId>
                        <configuration>
                            <outputDirectory>${project.build.directory}/jasper</outputDirectory>
                        </configuration>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>compile-reports</goal>
                                </goals>
                            </execution>
                        </executions>
                        <dependencies>
                            <dependency>
                                <groupId>jasperreports</groupId>
                                <artifactId>jasperreports</artifactId>
                                <version>3.5.0</version>
                            </dependency>
                            <dependency>
                                <groupId>org.slf4j</groupId>
                                <artifactId>slf4j-nop</artifactId>
                                <version>1.5.6</version>
                            </dependency>
                        </dependencies>
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.groovy.maven</groupId>
                        <artifactId>gmaven-plugin</artifactId>
                        <dependencies>
                            <dependency>
                                <groupId>mysql</groupId>
                                <artifactId>mysql-connector-java</artifactId>
                                <version>5.1.6</version>
                            </dependency>
                            <dependency>
                                <groupId>jasperreports</groupId>
                                <artifactId>jasperreports</artifactId>
                                <version>3.5.0</version>
                            </dependency>
                        </dependencies>
                        <executions>
                            <execution>
                                <id>Generate Jasper Reports</id>
                                <phase>verify</phase>
                                <goals>
                                    <goal>execute</goal>
                                </goals>
                                <configuration>
                                    <properties>
                                        <db-ip>${jahia.test.jmeter.dbip}</db-ip>
                                        <db-login>${jahia.configure.databaseUsername}</db-login>
                                        <db-pwd>${jahia.configure.databasePassword}</db-pwd>
                                        <db-name>${jahia.test.jmeter.dbname}</db-name>
                                        <jasperreport>allTestPlanReport</jasperreport>
                                    </properties>
                                    <source>${pom.basedir}/src/main/scripts/groovy/generateJasperReports.groovy</source>
                                </configuration>
                            </execution>
                            <execution>
                                <id>Import JMeter Metrology Data</id>
                                <phase>post-integration-test</phase>
                                <goals>
                                    <goal>execute</goal>
                                </goals>
                                <configuration>
                                    <properties>
                                        <db-ip>${jahia.test.jmeter.dbip}</db-ip>
                                        <db-login>${jahia.configure.databaseUsername}</db-login>
                                        <db-pwd>${jahia.configure.databasePassword}</db-pwd>
                                        <db-name>${jahia.test.jmeter.dbname}</db-name>
                                        <db-clean>true</db-clean>
                                        <results-path>${pom.basedir}/target/jmeterResults</results-path>
                                    </properties>
                                    <source>${pom.basedir}/src/main/scripts/groovy/parseJMeterFiles.groovy</source>
                                </configuration>
                            </execution>
                            <execution>
                                <id>Execute JMeter Tests</id>
                                <phase>integration-test</phase>
                                <goals>
                                    <goal>execute</goal>
                                </goals>
                                <configuration>
                                    <properties>
                                        <path>${jahia.test.jmeter.path}</path>
                                        <context>${jahia.test.jmeter.context}</context>
                                        <threads>${jahia.test.jmeter.threads}</threads>
                                        <loops>${jahia.test.jmeter.loops}</loops>
                                        <rootLogin>${jahia.test.jmeter.username}</rootLogin>
                                        <rootPassword>${jahia.test.jmeter.password}</rootPassword>
                                        <testsPath>${jahia.test.jmeter.path}/bin/testPlan</testsPath>
                                    </properties>
                                    <source>${pom.basedir}/src/main/scripts/groovy/executeJMeterTests.groovy</source>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

