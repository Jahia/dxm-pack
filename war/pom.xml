        <profile>
            <id>run-jahia</id>
            <activation>
                <property>
                    <name>jahia.run.tests</name>
                    <value>true</value>
                </property>
            </activation>
            <build>
                <resources>
                    <resource>
                        <directory>src/main/resources</directory>
                    </resource>
                    <resource>
                        <directory>target/jasper</directory>
                    </resource>
                </resources>

                <plugins>
                    <plugin>
                        <groupId>org.jahia.server</groupId>
                        <artifactId>maven-jahia-plugin</artifactId>
                        <version>${jahia.plugin.version}</version>
                        <configuration>
                            <jahia.configure.jahiaRootPassword>root1234</jahia.configure.jahiaRootPassword>
                        </configuration>
                        <executions>
                            <execution>
                                <id>deploy</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>deploy</goal>
                                    <goal>configure</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>${antrun.plugin.version}</version>
                        <dependencies>
                            <dependency>
                                <groupId>org.apache.ant</groupId>
                                <artifactId>ant-jsch</artifactId>
                                <version>${ant.version}</version>
                            </dependency>
                            <dependency>
                                <groupId>com.jcraft</groupId>
                                <artifactId>jsch</artifactId>
                                <version>0.1.41</version>
                            </dependency>
                        </dependencies>
                        <executions>
                            <execution>
                                <id>start-tomcat</id>
                                <phase>pre-integration-test</phase>
                                <configuration>
                                    <tasks>
                                        <echo message="Starting Tomcat" />
                                        <delete>
                                            <fileset dir="${jahia.deploy.targetServerDirectory}/logs" includes="**/*" />
                                        </delete>
                                        <exec executable="${jahia.deploy.targetServerDirectory}/bin/catalina.sh" dir="${jahia.deploy.targetServerDirectory}/bin" osfamily="unix">
                                            <arg value="start" />
                                        </exec>
                                        <exec executable="${jahia.deploy.targetServerDirectory}/bin/catalina.sh" dir="${jahia.deploy.targetServerDirectory}/bin" osfamily="mac">
                                            <arg value="start" />
                                        </exec>
                                        <exec executable="cmd" dir="${jahia.deploy.targetServerDirectory}/bin" spawn="true" osfamily="windows">
                                            <arg value="/c" />
                                            <arg value="${jahia.deploy.targetServerDirectory}/bin/startup.bat" />
                                        </exec>
                                        <echo message="Waiting for Tomcat to start..." />
                                        <waitfor maxwait="5" maxwaitunit="minute" checkevery="1000">
                                            <and>
                                                <socket server="localhost" port="8080" />
                                                <http url="http://localhost:8080/administration" />
                                            </and>
                                        </waitfor>
                                    </tasks>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>stop-tomcat</id>
                                <phase>post-integration-test</phase>
                                <configuration>
                                    <tasks>
                                        <echo message="Stopping Tomcat" />
                                        <exec executable="${jahia.deploy.targetServerDirectory}/bin/catalina.sh" dir="${jahia.deploy.targetServerDirectory}/bin" osfamily="unix">
                                            <arg value="stop" />
                                            <arg value="-force" />
                                        </exec>
                                        <exec executable="${jahia.deploy.targetServerDirectory}/bin/catalina.sh" dir="${jahia.deploy.targetServerDirectory}/bin" osfamily="mac">
                                            <arg value="stop" />
                                            <arg value="-force" />
                                        </exec>
                                        <exec executable="cmd" dir="${jahia.deploy.targetServerDirectory}/bin" spawn="true" osfamily="windows">
                                            <arg value="/c" />
                                            <arg value="${jahia.deploy.targetServerDirectory}/bin/shutdown.bat" />
                                        </exec>
                                        <echo message="Waiting while Tomcat is stopping..." />
                                        <waitfor maxwait="1" maxwaitunit="minute" checkevery="1000">
                                            <not>
                                                <http url="http://localhost:8080/administration" />
                                            </not>
                                        </waitfor>
                                        <echo message="Undeploying jahia" />
                                        <delete dir="${jahia.deploy.targetServerDirectory}/webapps/${jahia.deploy.war.dirName}" />
                                        <mkdir dir="${project.build.directory}/tomcatLogs" />
                                        <copy file="${jahia.deploy.targetServerDirectory}/logs/catalina.out" toDir="${project.build.directory}/tomcatLogs" failonerror="false" />
                                    </tasks>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
